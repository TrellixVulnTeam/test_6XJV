<?xml version="1.0" encoding="utf-8"?>
<com.sprd.quickstepext.memory.MeminfoContainerView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/recents_memory_container"
    android:layout_gravity="center"
    android:visibility="gone">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:divider="@drawable/recents_memory_divider"
        android:showDividers="middle"
        android:layout_gravity="center"
        android:id="@+id/recents_memory_layout">
        <TextView android:id="@+id/recents_memory_avail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?attr/workspaceTextColor"
            android:layout_marginEnd="@dimen/recents_meminfo_margin"
            android:singleLine="true"
            android:textSize="@dimen/recents_meminfo_text_size"/>
        <TextView android:id="@+id/recents_memory_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?attr/workspaceTextColor"
            android:layout_marginStart="@dimen/recents_meminfo_margin"
            android:singleLine="true"
            android:textSize="@dimen/recents_meminfo_text_size"/>
    </LinearLayout>
</com.sprd.quickstepext.memory.MeminfoContainerView>