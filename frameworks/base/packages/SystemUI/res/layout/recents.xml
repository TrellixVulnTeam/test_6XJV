<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Recents View -->
    <com.android.systemui.recents.views.RecentsView
        android:id="@+id/recents_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </com.android.systemui.recents.views.RecentsView>

    <!--SPRD: new feature of quick cleaning. -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/recents_memory_container"
        android:layout_gravity="bottom"
        android:fitsSystemWindows="true">
        <ImageButton
        android:id="@+id/recents_memory_trash_can"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@android:color/transparent"
        android:src="@drawable/delete_btn" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:divider="@drawable/recents_memory_divider"
            android:showDividers="middle"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="5dp"
            android:id="@+id/recents_memory_layout"
            android:background="@drawable/recents_rounded_corner_bg">
            <TextView android:id="@+id/recents_memory_avail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffffff"
                android:layout_marginEnd="5dp"
                android:textSize="14sp"/>
            <TextView android:id="@+id/recents_memory_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffffff"
                android:layout_marginStart="5dp"
                android:textSize="14sp"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Incompatible task overlay -->
    <ViewStub android:id="@+id/incompatible_app_overlay_stub"
        android:inflatedId="@+id/incompatible_app_overlay"
        android:layout="@layout/recents_incompatible_app_overlay"
        android:layout_width="match_parent"
        android:layout_height="128dp"
        android:layout_gravity="center_horizontal|top" />

    <!-- Nav Bar Scrim View -->
    <ImageView
        android:id="@+id/nav_bar_scrim"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:scaleType="fitXY"
        android:src="@drawable/recents_lower_gradient" />
</FrameLayout>
